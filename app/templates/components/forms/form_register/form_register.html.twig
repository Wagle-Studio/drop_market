{{ form_start(registrationForm) }}
	{% embed "components/layouts/form_grid/form_grid.html.twig" with { error: registrationForm.vars.errors, class: "form_register" } %}
		{% block error %}
			{% if registrationForm.vars.errors|length > 0 %}
				<div class="form_register__error">
					{{ form_errors(registrationForm) }}
				</div>
			{% endif %}
		{% endblock %}
		{% block body %}
			{% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--email" } %}
				{% block form_field %}
					{{ form_label(registrationForm.email) }}
					{{ form_widget(registrationForm.email) }}
					{{ form_help(registrationForm.email) }}
					{{ form_errors(registrationForm.email) }}
				{% endblock %}
			{% endembed %}
			{% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--lastname" } %}
				{% block form_field %}
					{{ form_label(registrationForm.lastname) }}
					{{ form_widget(registrationForm.lastname) }}
					{{ form_help(registrationForm.lastname) }}
					{{ form_errors(registrationForm.lastname) }}
				{% endblock %}
			{% endembed %}
			{% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--firstname" } %}
				{% block form_field %}
					{{ form_label(registrationForm.firstname) }}
					{{ form_widget(registrationForm.firstname) }}
					{{ form_help(registrationForm.firstname) }}
					{{ form_errors(registrationForm.firstname) }}
				{% endblock %}
			{% endembed %}
			{% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--password" } %}
				{% block form_field %}
					{{ form_label(registrationForm.plainPassword) }}
					{{ form_widget(registrationForm.plainPassword) }}
					{{ form_help(registrationForm.plainPassword) }}
					{{ form_errors(registrationForm.plainPassword) }}
				{% endblock %}
			{% endembed %}
			{% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--password-confirmation" } %}
				{% block form_field %}
					{{ form_label(registrationForm.plainPasswordConfirmation) }}
					{{ form_widget(registrationForm.plainPasswordConfirmation) }}
					{{ form_help(registrationForm.plainPasswordConfirmation) }}
					{{ form_errors(registrationForm.plainPasswordConfirmation) }}
				{% endblock %}
			{% endembed %}
			{% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--agree-terms" } %}
				{% block form_field %}
					{{ form_widget(registrationForm.agreeTerms) }}
					{{ form_label(registrationForm.agreeTerms) }}
					{{ form_help(registrationForm.agreeTerms) }}
					{{ form_errors(registrationForm.agreeTerms) }}
				{% endblock %}
			{% endembed %}
		{% endblock %}
		{% block buttons %}
			{% include "components/atoms/button/button.html.twig" with { 
				text: "Inscription",
				class: "form_register__button" 
			} %}
		{% endblock %}
	{% endembed %}
{{ form_end(registrationForm) }}
