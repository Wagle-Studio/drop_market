{{ form_start(changePasswordForm) }}
    {% embed "components/layouts/form_grid/form_grid.html.twig" with { class: "form_password_change" }  %}
        {% block body %}
            {% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_password_change__field--password" } %}
                {% block form_field %}
                    {{ form_label(changePasswordForm.plainPassword) }}
                    {{ form_widget(changePasswordForm.plainPassword) }}
                    {{ form_help(changePasswordForm.plainPassword) }}
                    {{ form_errors(changePasswordForm.plainPassword) }}
                {% endblock %}
            {% endembed %}
            {% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_register__field--password-confirmation" } %}
                {% block form_field %}
                    {{ form_label(changePasswordForm.plainPasswordConfirmation) }}
                    {{ form_widget(changePasswordForm.plainPasswordConfirmation) }}
                    {{ form_help(changePasswordForm.plainPasswordConfirmation) }}
                    {{ form_errors(changePasswordForm.plainPasswordConfirmation) }}
                {% endblock %}
            {% endembed %}
        {% endblock %}
        {% block buttons %}
            {% include "components/atoms/button/button.html.twig" with { 
                        text: "Sauvegarder le mot de passe",
                        class: "form_password_change__button" 
                    } %}
        {% endblock %}
    {% endembed %}
{{ form_end(changePasswordForm) }}
