{{ form_start(resetPasswordForm) }}
    {% embed "components/layouts/form_grid/form_grid.html.twig" with { class: "form_password_request" }  %}
        {% block body %}
            {% embed "components/layouts/form_field/form_field.html.twig" with { class: "form_password_request__field--email" } %}
                {% block form_field %}
                    {{ form_label(resetPasswordForm.email) }}
                    {{ form_widget(resetPasswordForm.email) }}
                    {{ form_help(resetPasswordForm.email) }}
                    {{ form_errors(resetPasswordForm.email) }}
                {% endblock %}
            {% endembed %}
        {% endblock %}
        {% block buttons %}
            {% include "components/atoms/button/button.html.twig" with { 
                        text: "Changer le mot de passe",
                        class: "form_password_request__button" 
                    } %}
        {% endblock %}
    {% endembed %}
{{ form_end(resetPasswordForm) }}
